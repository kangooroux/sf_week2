{% extends '_template.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}

    <div class="section">
        <h1 class="title">Votre profil</h1>

        {% include 'includes/flash.html.twig' %}
    </div>

    <div class="section">
        <h2 class="subtitle">Vos informations</h2>

        {{ form_start(updateProfileForm) }}

        {{ form_row(updateProfileForm.email, {label: "Addresse E-mail: "}) }}
        {{ form_row(updateProfileForm.pseudo, {label: "Pseudo: "}) }}
        <button type="submit" class="button is-primary">Modifier</button>

        {{ form_end(updateProfileForm) }}
    </div>

    <div class="section">
        <h2 class="subtitle">Changer votre mot de passe</h2>

        {{ form_start(updatePasswordForm) }}

        {{ form_row(updatePasswordForm.newPassword.first, {label: 'Nouveau mot de passe: '}) }}
        {{ form_row(updatePasswordForm.newPassword.second, {label: 'Confirmer le mot de passe: '}) }}
        <button type="submit" class="button is-primary">Envoyer</button>

        {{ form_end(updatePasswordForm) }}
    </div>

{% endblock %}

